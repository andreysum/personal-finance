<?xml version="1.1" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="PersonalFinances">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.github.andreysum.pfinance.db.schema.CategoryEntity</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.jdbc.fetch_size" value="20"/>
            <property name="hibernate.jdbc.batch_size" value="10"/>
            <property name="hibernate.connection.url"
                      value="jdbc:h2:file:/media/andreysum/My Passport/projects/idea/pfinances/data/pfinances;IFEXISTS=TRUE;"/>
        </properties>
    </persistence-unit>
</persistence>